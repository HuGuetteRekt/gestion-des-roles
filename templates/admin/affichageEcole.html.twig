{% extends "base.html.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="affichage s12 m12 l12">
                <h3>Liste des écoles !</h3>
                {% for ecole in ecoles %}
                <ul class="liste">
                    <li>Nom : {{ ecole.nom }}</li>
                    <a href="/admin/affichageEcole/{{ ecole.id }}">Plus d'info sur l'école</a>
                    <a href="/admin/affichageEcole/{{ ecole.id}}/edit">Modifier l'école</a>
                    <a href="/admin/affichageEcole/{{ ecole.id}}/delete">Supprimer l'école</a> 
                </ul>
                {% endfor %}
                <p class="retour"><a href="{{ path('admin') }}">Retour à la page ADMIN</a></p>
            </div>
        </div>
    </div>

{% endblock %}